<fieldset style="margin-top: 1em;">
  <legend>Nowe podkategorie</legend>
  <div class="scrollbar">
    <% @subcategories.each do |s_category_id, value| %>
      <% cat_id = "sub-category-#{s_category_id}"%>
      <%= check_box_tag 'new_subcategories[]', s_category_id, value[:selected], :id => cat_id   %> <%= label_tag cat_id, value[:category].name, :class => 'inline', :style => "margin-left: #{10*value[:category].cached_level}px" %> <br/>
    <% end %>
  </div>
</fieldset>