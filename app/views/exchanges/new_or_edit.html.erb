<%= error_messages_for :exchange %>
<h1>Edytowanie kursu</h1>
<% form_for @exchange do |f| %>
  <p>
    <label for="exchange_currency_a">
      Pierwsza waluta:
    </label>
    <%= f.select :currency_a, @current_user.visible_currencies.collect {|c| [ c.name, c.id ] } %>
  </p>
  
  <p>
    <label for="exchange_currency_b">
      Druga waluta:
    </label>
    <%= f.select :currency_b, @current_user.visible_currencies.collect {|c| [ c.name, c.id ] } %>
  </p>
  
  <p>
    <label for="exchange_left_to_right">
      Kurs zamiany z pierwszej waluty na drugą
    </label>
    <%= f.text_field :left_to_right, :size => 8 %>
  </p>
  
  <p>
    <label for="exchange_right_to_left">
      Kurs zamiany z drugiej waluty na pierwszą
    </label>
    <%= f.text_field :right_to_left, :size => 8 %>
  </p>
  
  <p>
    <label for="exchange_day">
      Kurs na dzień:
    </label>
    <%= f.date_select :day %>
  </p>

  <%= f.submit 'Zapisz kurs' %>
<% end %>

<%= link_to 'Lista kursów', exchanges_path %>
